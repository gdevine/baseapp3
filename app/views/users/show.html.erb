<% provide(:title, 'User View') %>
<% provide(:pageheading, 'User '+ @user.fullname) %>


<!-- Add edit/delete buttons if authorized -->
<% if can? :crud, @user %>
	<div class="row bottomspace">  
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
			<a class="btn btn-block btn-info" data-toggle="dropdown" href="#" id="options_button">
			  Options
			  <span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
			  <li><%= link_to "Edit User", edit_user_path(id:@user.id) %> </li>
			  <li><%= link_to "Delete User", @user, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		  </ul>
		</div>
	</div>
<% end %>


<div class="row topspace20">
  <div class="col-md-12">	
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">First Name</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.firstname %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Surname</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.surname %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Email</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.email %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Role</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.role %></p>
		  </div>
		</div>

		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Approved</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.approved %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Date Joined</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @user.created_at.to_formatted_s(:long_ordinal) %></p>
		  </div>
		</div>
		
  </div>
  
</div>